doctype html
html
  head
    title Mathbook
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href="https://fonts.googleapis.com/css?family=Merriweather|Roboto+Slab" rel="stylesheet")
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.8/css/all.css')
    link(rel='stylesheet', href='/bulma/bulma.css')
    link(rel='stylesheet', href='/katex/katex.min.css')
    link(rel='stylesheet', href='/chartist/chartist.min.css')
    link(rel='stylesheet', href='/dist/bundle.min.css')
    link(rel='stylesheet', href='/stylesheets/components/topic-box.css')
    if env === 'production'
      script(async src="https://www.googletagmanager.com/gtag/js?id=UA-52081148-8")
    script( type="text/javascript" src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js")
    script(type="text/javascript" src="/moment/moment.js")
    script(type="text/javascript" src="/sortable/Sortable.min.js")
    script(type="text/javascript" src="/chartist/chartist.min.js")
    script(type="text/javascript" src="/katex/katex.min.js")
    script(type="text/javascript" src="/katex/contrib/auto-render.min.js")
    script(type="text/javascript" src="/jquery/dist/jquery.min.js")
    script(type="text/javascript" src="/socket.io/socket.io.js")
    script(type="text/javascript" src="/riot/riot.min.js")
    script(type="text/javascript" src="/dist/bundle.min.js")
    if !subjectMap
      script(type="text/javascript" src="/riotInit" defer="true")
  body(style="height:100%;min-height:100%;")
    nav.navbar
      .container
        .navbar-brand
          a.navbar-item(href='/')
            img(src='/images/mathbook_indigo_white_v5.png', alt='Mathbook Logo')
          span.navbar-burger(onclick="openNavMenu()")
            span
            span
            span
        .navbar-menu
          .navbar-end
            a.navbar-item(href='/')
              | Home
            div#navbarContributeDropdown.navbar-item.has-dropdown(onclick="toggleDropdownMenu('navbarContributeDropdown')")
              a.navbar-link
                | Contribute
              .navbar-dropdown
                a.navbar-item(href='/contribute')
                  | Overview
                a.navbar-item(href='/contribute/create-tutorial')
                  | Create a Tutorial
                a.navbar-item(href='/contribute/review-tutorial')
                  | Review a Tutorial
            if authenticated
              div#navbarDropdown.navbar-item.has-dropdown(onclick="toggleDropdownMenu('navbarDropdown')")
                a.navbar-link
                  | Logged In as #{username}
                .navbar-dropdown
                  a.navbar-item(href='/dashboard')
                    | Dashboard
                  a.navbar-item(href='/tutorials/submitted')
                    | Submitted Tutorials
                  a.navbar-item(href='/logout')
                    | Logout
            else
              a.navbar-item(href='/login')
                | Login
    #wrapper.my-wrapper
      block content
    .columns.is-marginless.is-hidden-touch
      .column.my-spacer.my-purple-bg
      .column.my-spacer.my-primary-bg
      .column.my-spacer.my-blue-bg
      .column.my-spacer.my-red-bg
      .column.my-spacer.my-orange-bg
    footer.footer.my-footer-color
      .container
        .content.has-text-centered
          p.my-footer-text
            a.my-footer-text(target='_blank', href='https://github.com/mathbook-io/mathbook')
              strong Mathbook
            |  would not be possible without its talented Contributors.
            a.icon.my-footer-text(target='_blank', href='https://github.com/mathbook-io/mathbook/contributors.md')
              i.fab.fa-github
          p.my-footer-text
            | Licensed under 
            a.my-footer-text(target='_blank', href='https://github.com/mathbook-io/mathbook/blob/develop/LICENSE') 
              strong Mozilla Public License 2.0 
            a(target="_blank" href="https://opensource.org/")
              span.icon.is-small
                image(src="/images/osi_symbol.png")